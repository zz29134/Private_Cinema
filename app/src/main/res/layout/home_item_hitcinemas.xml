<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_item_hitcinemas"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="25dp"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    app:cardCornerRadius="16dp"
    app:cardElevation="16dp"
    app:contentPadding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/hitCinema_ImageView"
            android:layout_width="60dp"
            android:layout_height="90dp" />

        <TextView
            android:id="@+id/hitCinema_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/hitCinema_ImageView"
            android:layout_toEndOf="@+id/hitCinema_ImageView"/>

        <TextView
            android:id="@+id/hitCinema_Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/hitCinema_ImageView"
            android:layout_toEndOf="@+id/hitCinema_ImageView"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/hitCinema_Feature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/hitCinema_ImageView"
            android:layout_toEndOf="@+id/hitCinema_ImageView"
            android:layout_alignParentBottom="true"/>

        <com.iarcuschin.simpleratingbar.SimpleRatingBar
            android:id="@+id/rb_cinemaRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            app:srb_starSize="15dp"
            app:srb_numberOfStars="5"
            app:srb_rating="3"
            app:srb_stepSize="0.5"
            app:srb_borderColor="@color/blue"
            app:srb_fillColor="@color/ameber500" />
    </RelativeLayout>

</android.support.v7.widget.CardView>